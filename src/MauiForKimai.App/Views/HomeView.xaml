<?xml version="1.0" encoding="utf-8" ?>
<mvvm:TinyView
    x:Class="MauiForKimai.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiForKimai.Controls"
    xmlns:helpers="clr-namespace:MauiForKimai.Helpers"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:model="clr-namespace:MauiForKimai.Models"
    xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
    xmlns:viewmodel="clr-namespace:MauiForKimai.ViewModels"
    x:DataType="viewmodel:HomeViewModel"
    Shell.NavBarIsVisible="False">



    <ContentPage.Resources>
        <mct:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".06*" />
            <RowDefinition Height=".20*" />
            <RowDefinition Height=".49*" />
            <RowDefinition Height=".25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <Grid Grid.Row="0" Style="{StaticResource InfoStatusBar}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Style="{StaticResource LargeLabel}"
                Text="Maui For Kimai"
                VerticalOptions="Center" />
            <Button
                Grid.Column="2"
                Command="{Binding GoToLoginCommand}"
                HorizontalOptions="End"
                IsVisible="{Binding ApiStateProvider.IsAuthenticated}"
                Text="Login"
                VerticalOptions="Fill" />

            <Button
                Grid.Column="1"
                Command="{Binding GoToLoginCommand}"
                Text="Profile" />
        </Grid>





        <Frame
            Grid.Row="1"
            Margin="5"
            Style="{StaticResource CardTimesheetView}">
            <VerticalStackLayout>
                <Label
                    Grid.Column="0"
                    Style="{StaticResource LargeLabel}"
                    Text="Widget" />

                <Label
                    FontFamily="MaterialDesignIcons"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="{x:Static helpers:MaterialDesignIconsFonts.RocketLaunch}" />
            </VerticalStackLayout>


        </Frame>

        <RefreshView
            Grid.Row="2"
            Command="{Binding RefreshTimesheetsCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>

                <CollectionView ItemsSource="{Binding RecentTimesheets}">

                    <CollectionView.Header>
                        <ContentView Padding="10">
                            <Label Style="{StaticResource LargeLabel}">Recent Timesheets</Label>
                        </ContentView>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:TimesheetRecentListModel">
                            <Grid Padding="10,5">
                                <Frame Style="{StaticResource RecentTimesheetCard}">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=TimesheetOnTapCommand}" CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1.3*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource MediumLabel}"
                                            Text="{Binding ActivityName}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding ProjectName}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding CustomerName}" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding Date}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Style="{StaticResource LargeLabel}"
                                            Text="{Binding Duration}" />


                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            HorizontalOptions="End"
                                            Style="{StaticResource Key=RecentRestartButton}">
                                            <Button.ImageSource>
                                                <FontImageSource
                                                    FontFamily="MaterialDesignIcons"
                                                    Glyph="{x:Static helpers:MaterialDesignIconsFonts.PlayOutline}"
                                                    Size="25" />
                                            </Button.ImageSource>
                                        </Button>
                                    </Grid>
                                </Frame>
                            </Grid>
                            <!--<controls:TimesheetListItemControl ="{Binding .}" />-->
                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>

            </ScrollView>
        </RefreshView>
        <Grid Grid.Row="3" VerticalOptions="Center">


            <Border x:Name="SwipeMenu" Style="{StaticResource TimeTrackingCard}">
                <!--<Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>-->

                <VerticalStackLayout>

                    <!--<Picker x:Name="picker" Title="Select a mode">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Track instantly</x:String>
                                <x:String>Create new</x:String>
                                <x:String>Choose template</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>-->

                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="40"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Time}" />


                    <ImageButton
                        x:Name="start"
                        ClassId="StartButton"
                        Command="{Binding StartTimeTrackingCommand}"
                        IsVisible="{Binding IsTimetrackingActive, Converter={StaticResource InvertedBoolConverter}}"
                        Source="play_circle_outline_blue.png"
                        Style="{StaticResource TimetrackingButton}">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>

                    <ImageButton
                        x:Name="stop"
                        ClassId="StopButton"
                        Command="{Binding StopTimeTrackingCommand}"
                        IsVisible="{Binding IsTimetrackingActive}"
                        Source="stop_circle_outline_red.png"
                        Style="{StaticResource TimetrackingButton}">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>




                </VerticalStackLayout>

            </Border>
        </Grid>
        <ActivityIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

    </Grid>



</mvvm:TinyView>