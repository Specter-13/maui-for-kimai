<?xml version="1.0" encoding="utf-8" ?>
<mvvm:TinyView
    x:Class="MauiForKimai.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiForKimai.Controls"
    xmlns:helpers="clr-namespace:MauiForKimai.Helpers"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:model="clr-namespace:MauiForKimai.Core.Models;assembly=MauiForKimai.Core"
    xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:viewmodel="clr-namespace:MauiForKimai.ViewModels"
    x:DataType="viewmodel:HomeViewModel">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{AppThemeBinding Dark={StaticResource BackgroundDark}, Light={StaticResource BackgroundLight}}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <mct:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid>
            <Label
                HorizontalOptions="Start"
                Style="{StaticResource TitleLabel}"
                Text="Home"
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.85*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <!--<Grid Grid.Row="0" Style="{StaticResource InfoStatusBar}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Style="{StaticResource TitleLabel}"
                Text="Home"
                VerticalOptions="Center" />

        -->
        <!--<Image Margin="5,0,0,0" Source="logo_long_white.png" />-->
        <!--<Button
                Grid.Column="2"
                Command="{Binding GoToLoginCommand}"
                HorizontalOptions="End"
                IsVisible="{Binding ApiStateProvider.IsAuthenticated}"
                Text="Login"
                VerticalOptions="Fill" />-->

        <!--<Button
                Grid.Column="1"
                Command="{Binding GoToLoginCommand}"
                Text="Profile" />-->
        <!--
        </Grid>-->




        <!--  Widget  -->
        <Frame
            Grid.Row="0"
            Margin="5"
            Style="{StaticResource Widget}">
            <Grid>
                <Label
                    FontFamily="MaterialDesignIcons"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="{x:Static helpers:MaterialDesignIconsFonts.RocketLaunch}"
                    VerticalOptions="Center" />
            </Grid>


        </Frame>

        <!--  Recents  -->
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshTimesheetsCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>

                <CollectionView ItemsSource="{Binding RecentTimesheets}">

                    <CollectionView.Header>
                        <ContentView Padding="10">
                            <Label Style="{StaticResource LargeLabel}">Recent Timesheets</Label>
                        </ContentView>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:TimesheetRecentListModel">
                            <Grid Padding="10,5">
                                <Frame Style="{StaticResource RecentTimesheetCard}">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=TimesheetOnTapCommand}" CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1.3*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource MediumLabel}"
                                            Text="{Binding ActivityName}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding ProjectName}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding CustomerName}" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Style="{StaticResource SmallLabel}"
                                            Text="{Binding Date}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Style="{StaticResource LargeLabel}"
                                            Text="{Binding Duration}" />


                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            HorizontalOptions="End"
                                            Style="{StaticResource Key=RecentRestartButton}">
                                            <Button.ImageSource>
                                                <FontImageSource
                                                    FontFamily="MaterialDesignIcons"
                                                    Glyph="{x:Static helpers:MaterialDesignIconsFonts.PlayOutline}"
                                                    Size="25" />
                                            </Button.ImageSource>
                                        </Button>
                                    </Grid>
                                </Frame>
                            </Grid>
                            <!--<controls:TimesheetListItemControl ="{Binding .}" />-->
                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>

            </ScrollView>
        </RefreshView>

        <!--  Tracking  -->
        <Grid Grid.Row="2" VerticalOptions="Center">


            <Border x:Name="SwipeMenu" Style="{StaticResource TimeTrackingCard}">
                <!--<Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>-->

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--<Picker x:Name="picker" Title="Select a mode">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Track instantly</x:String>
                                <x:String>Create new</x:String>
                                <x:String>Choose template</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>-->






                    <!--  https://assets4.lottiefiles.com/packages/lf20_Ua4GCw5PJM.json  -->


                    <skia:SKLottieView
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        HeightRequest="35"
                        IsVisible="{Binding IsTimetrackingActive}"
                        RepeatCount="-1"
                        Source="active_animation.json"
                        WidthRequest="70" />

                    <HorizontalStackLayout
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            IsVisible="{Binding IsTimetrackingActive}"
                            Text="{Binding Time, StringFormat='{}{0:hh\\:mm}'}"
                            VerticalOptions="Center" />

                        <Entry
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            IsReadOnly="True"
                            Placeholder="Choose Favourite"
                            Text="{Binding SelectedActivity}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <ImageButton
                        x:Name="start"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        ClassId="StartButton"
                        Command="{Binding StartTimeTrackingCommand}"
                        IsVisible="{Binding IsTimetrackingActive, Converter={StaticResource InvertedBoolConverter}}"
                        Source="play_circle_outline_blue.png"
                        Style="{StaticResource TimetrackingButton}">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>

                    <ImageButton
                        x:Name="stop"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        ClassId="StopButton"
                        Command="{Binding StopTimeTrackingCommand}"
                        IsVisible="{Binding IsTimetrackingActive}"
                        Source="stop_circle_outline_red.png"
                        Style="{StaticResource TimetrackingButton}">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>




                </Grid>

            </Border>
        </Grid>
        <ActivityIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

    </Grid>



</mvvm:TinyView>