<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiForKimai.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:MauiForKimai.Helpers"
    xmlns:model="clr-namespace:MauiForKimai.ApiClient;assembly=MauiForKimai.ApiClient"
    xmlns:viewmodel="clr-namespace:MauiForKimai.ViewModels"
    Title="Home"
    x:DataType="viewmodel:HomeViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".20*" />
            <RowDefinition Height=".50*" />
            <RowDefinition Height=".30*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Frame Grid.Row="0" BackgroundColor="SlateGray">
            <VerticalStackLayout>
                <Label
                    Grid.Column="0"
                    Style="{StaticResource LargeLabel}"
                    Text="Widget" />

                <Label
                    FontFamily="MaterialDesignIcons"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="{x:Static helpers:MaterialDesignIconsFonts.RocketLaunch}" />
            </VerticalStackLayout>


        </Frame>

        <ScrollView Grid.Row="1">

            <CollectionView ItemsSource="{Binding RecentTimesheets}">

                <CollectionView.Header>
                    <ContentView Padding="10">
                        <Label Style="{StaticResource LargeLabel}">Recent Timesheets</Label>
                    </ContentView>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:TimesheetCollectionExpanded">
                        <Grid Padding="10">
                            <Frame BackgroundColor="SlateGrey" HeightRequest="125">
                                <Grid RowDefinitions=".5*,.5*">
                                    <Label
                                        Grid.Row="0"
                                        Style="{StaticResource LargeLabel}"
                                        Text="{Binding Activity.Name}" />
                                    <Label
                                        Grid.Row="1"
                                        Style="{StaticResource MediumLabel}"
                                        Text="{Binding Duration}" />
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>

        </ScrollView>

        <Grid Grid.Row="2" VerticalOptions="Center">


            <Frame
                x:Name="SwipeMenu"
                BackgroundColor="SlateGray"
                CornerRadius="40">
                <Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>

                <VerticalStackLayout>
                    <Label
                        Grid.Column="0"
                        FontSize="Large"
                        Text="Time tracking" />

                    <Button Command="{Binding GetTimeSheetsCommand}" Text="Get recent Timesheets" />



                </VerticalStackLayout>

            </Frame>
        </Grid>
        <ActivityIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

    </Grid>



</ContentPage>