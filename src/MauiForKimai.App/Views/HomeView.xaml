<?xml version="1.0" encoding="utf-8" ?>
<mvvm:TinyView
    x:Class="MauiForKimai.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiForKimai.Controls"
    xmlns:helpers="clr-namespace:MauiForKimai.Helpers"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:model="clr-namespace:MauiForKimai.ApiClient;assembly=MauiForKimai.ApiClient"
    xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
    xmlns:viewmodel="clr-namespace:MauiForKimai.ViewModels"
    Title="Home"
    x:DataType="viewmodel:HomeViewModel">

    <ContentPage.Resources>
        <mct:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".20*" />
            <RowDefinition Height=".50*" />
            <RowDefinition Height=".30*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Frame Grid.Row="0" Style="{StaticResource CardTimesheetView}">
            <VerticalStackLayout>
                <Label
                    Grid.Column="0"
                    Style="{StaticResource LargeLabel}"
                    Text="Widget" />

                <Label
                    FontFamily="MaterialDesignIcons"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="{x:Static helpers:MaterialDesignIconsFonts.RocketLaunch}" />
            </VerticalStackLayout>


        </Frame>

        <ScrollView Grid.Row="1">

            <CollectionView ItemsSource="{Binding RecentTimesheets}">

                <CollectionView.Header>
                    <ContentView Padding="10">
                        <Label Style="{StaticResource LargeLabel}">Recent Timesheets</Label>
                    </ContentView>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:TimesheetCollectionExpanded">
                        <Grid Padding="10">
                            <Frame HeightRequest="125" Style="{StaticResource CardTimesheetView}">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=TimesheetOnTapCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                <Grid RowDefinitions=".5*,.5*">
                                    <Label
                                        Grid.Row="0"
                                        Style="{StaticResource LargeLabel}"
                                        Text="{Binding Activity.Name}" />
                                    <Label
                                        Grid.Row="1"
                                        Style="{StaticResource MediumLabel}"
                                        Text="{Binding Duration}" />
                                </Grid>
                            </Frame>
                        </Grid>
                        <!--<controls:TimesheetListItemControl ="{Binding .}" />-->
                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>

        </ScrollView>

        <Grid Grid.Row="2" VerticalOptions="Center">


            <Frame
                x:Name="SwipeMenu"
                CornerRadius="20"
                Style="{StaticResource CardTimesheetView}">
                <Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>

                <VerticalStackLayout>
                    <Label
                        Grid.Column="0"
                        FontSize="Large"
                        HorizontalTextAlignment="Center"
                        Text="Time tracking" />

                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="40"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Time}" />


                    <ImageButton
                        x:Name="start"
                        ClassId="StartButton"
                        Command="{Binding StartNewTimesheetCommand}"
                        HeightRequest="70"
                        IsVisible="{Binding IsTimetrackingActive, Converter={StaticResource InvertedBoolConverter}}"
                        MaximumHeightRequest="150"
                        Source="play_circle_outline.png"
                        VerticalOptions="Start">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>

                    <ImageButton
                        x:Name="stop"
                        ClassId="StopButton"
                        Command="{Binding StopActiveTimesheetCommand}"
                        HeightRequest="70"
                        IsVisible="{Binding IsTimetrackingActive}"
                        MaximumHeightRequest="150"
                        Source="pause_circle_outline.png"
                        VerticalOptions="Start">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>

                </VerticalStackLayout>

            </Frame>
        </Grid>
        <ActivityIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

    </Grid>



</mvvm:TinyView>