<?xml version="1.0" encoding="utf-8" ?>
<mvvm:TinyView
    x:Class="MauiForKimai.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiForKimai.Controls"
    xmlns:helpers="clr-namespace:MauiForKimai.Helpers"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:model="clr-namespace:MauiForKimai.Core.Models;assembly=MauiForKimai.Core"
    xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:viewmodel="clr-namespace:MauiForKimai.ViewModels"
    x:DataType="viewmodel:HomeViewModel">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{AppThemeBinding Dark={StaticResource BackgroundDark}, Light={StaticResource BackgroundLight}}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <mct:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid>
            <Label
                HorizontalOptions="Start"
                Style="{StaticResource TitleLabel}"
                Text="Home"
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>




        <!--  Widget  -->
        <Frame
            Grid.Row="0"
            Margin="10"
            Padding="10"
            HeightRequest="110"
            Style="{StaticResource Widget}">
            <Grid ColumnDefinitions="*,2*" RowDefinitions="27,*">


                <Label
                    Grid.Row="0"
                    Style="{StaticResource LargeLabel}"
                    Text="Today" />

                <StackLayout Grid.Row="1" Padding="5">
                    <HorizontalStackLayout Margin="0,0,0,5">
                        <Label Style="{StaticResource MediumLabel}" Text="Total: " />


                        <Label
                            FontAttributes="Bold"
                            Style="{StaticResource MediumLabel}"
                            Text="{Binding Statistics.TodayTracked}" />
                    </HorizontalStackLayout>

                    <Label Style="{StaticResource SmallLabel}" Text="{Binding Statistics.NumberOfActivites}" />

                    <Label Style="{StaticResource SmallLabel}" Text="{Binding Statistics.NumberOfProjects}" />
                </StackLayout>


                <StackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="5">
                    <HorizontalStackLayout Margin="0,0,0,5">
                        <Label Style="{StaticResource MediumLabel}" Text="Longest activity: " />
                        <Label
                            FontAttributes="Bold"
                            Style="{StaticResource MediumLabel}"
                            Text="{Binding Statistics.LongestActivityDuration}" />
                    </HorizontalStackLayout>
                    <Label Style="{StaticResource SmallLabel}" Text="{Binding Statistics.LongestActivityName}" />
                    <Label Style="{StaticResource SmallLabel}" Text="{Binding Statistics.LongestActivityProjectName}" />
                </StackLayout>


            </Grid>


        </Frame>


        <!--  Recents  -->
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshTimesheetsCommand}"
            IsRefreshing="{Binding IsRefreshing}">

            <CollectionView ItemsSource="{Binding RecentTimesheets}" SelectionMode="Single">

                <CollectionView.Header>
                    <ContentView>
                        <Grid Padding="7">
                            <Label Style="{StaticResource LargeLabel}">Recent Timesheets</Label>

                            <Button
                                Grid.RowSpan="3"
                                Grid.Column="3"
                                BackgroundColor="Transparent"
                                Command="{Binding CreateNewTimesheetCommand}"
                                HorizontalOptions="End"
                                Style="{StaticResource Key=RecentRestartButton}">
                                <Button.ImageSource>
                                    <FontImageSource
                                        FontFamily="MaterialDesignIcons"
                                        Glyph="{x:Static helpers:MaterialDesignIconsFonts.Plus}"
                                        Size="30" />
                                </Button.ImageSource>

                            </Button>
                        </Grid>
                    </ContentView>
                </CollectionView.Header>


                <CollectionView.EmptyView>
                    <ContentView>
                        <Label
                            Padding="10"
                            HorizontalTextAlignment="Center"
                            Text="Empty recents timesheet" />
                    </ContentView>

                </CollectionView.EmptyView>


                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:TimesheetModel">

                        <!--<controls:TimesheetListDesktopControl IsVisible="{OnIdiom Desktop=False,Phone=True}" Title="{Binding Date}" Timesheet="{Binding .}" />-->
                        <controls:TimesheetListControl
                            Title="{Binding Date}"
                            Margin="5"
                            Timesheet="{Binding .}" />


                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <!--  Tracking  -->

        <Border
            x:Name="SwipeMenu"
            Grid.Row="2"
            HeightRequest="70"
            Style="{StaticResource TimeTrackingCard}">
            <!--<Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated" />
                </Frame.GestureRecognizers>-->

            <Grid>

                <!--  timetracking ooff  -->
                <Grid IsVisible="{Binding IsTimetrackingActive, Converter={StaticResource InvertedBoolConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>






                    <Label
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        Style="{StaticResource MediumLabel}"
                        Text="No activity"
                        VerticalOptions="Center" />




                    <ImageButton
                        x:Name="start"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        ClassId="StartButton"
                        Command="{Binding StartNewTimesheetCommand}"
                        HorizontalOptions="Center"
                        IsVisible="{Binding IsTimetrackingActive, Converter={StaticResource InvertedBoolConverter}}"
                        Source="play_circle_outline_blue.png"
                        Style="{StaticResource TimetrackingButton}"
                        VerticalOptions="Center">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>

                </Grid>


                <!--  timetracking on  -->
                <Grid IsVisible="{Binding IsTimetrackingActive}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <skia:SKLottieView
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        HeightRequest="35"
                        IsVisible="{Binding IsTimetrackingActive}"
                        RepeatCount="-1"
                        Source="active_animation.json"
                        WidthRequest="70" />

                    <Label
                        Grid.RowSpan="1"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="{Binding MyTimer.Time, StringFormat='{}{0:hh\\:mm}'}"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding SelectedActivity}"
                        VerticalOptions="Start" />




                    <ImageButton
                        x:Name="stop"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        ClassId="StopButton"
                        Command="{Binding StopTimeTrackingCommand}"
                        HorizontalOptions="Center"
                        IsVisible="{Binding IsTimetrackingActive}"
                        Source="stop_circle_outline_red.png"
                        Style="{StaticResource TimetrackingButton}"
                        VerticalOptions="Center">

                        <ImageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </ImageButton.GestureRecognizers>
                    </ImageButton>





                </Grid>
            </Grid>
        </Border>
        <ActivityIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

    </Grid>



</mvvm:TinyView>